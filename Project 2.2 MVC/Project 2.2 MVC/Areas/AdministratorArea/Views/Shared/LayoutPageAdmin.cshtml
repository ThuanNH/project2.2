<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Admin/StyleAdmin.css" rel="stylesheet" />
    <script src="~/Scripts/Admin/jquery-1.5.2.min.js"></script>
	<script src="~/Scripts/Admin/hideshow.js" type="text/javascript"></script>
	<script src="~/Scripts/Admin/jquery.tablesorter.min.js" type="text/javascript"></script>
	<script src="~/Scripts/Admin/jquery.equalHeight.js" type="text/javascript"></script>
</head>
<body>
<div style="margin:0 auto;padding:0;width:100%;height:auto;">
    <header id="header">
		<hgroup>
            <h1 class="site_title"><a href="index.html">Quản trị website</a></h1>
			<h2 class="section_title">Web Nghe Nhạc</h2>
			<div class="btn_view_site"><a href="#">Xem trang người dùng</a></div>
		</hgroup>
	</header> <!-- end of header bar -->

    <section id="secondary_bar">
		<div class="user">
			@if (Request.IsAuthenticated) { 
                <p>Chào: 
                    @Html.Encode(User.Identity.Name)
                    @Html.ActionLink("(Đăng xuất)", "Logout", "Account")
                </p>
            }else{
                Response.Redirect(Url.Action("Login", "Account"));
            }
		</div>
		<div class="breadcrumbs_container">
			<!--<article class="breadcrumbs"><a href="index.html">Website Admin</a> <div class="breadcrumb_divider"></div> <a class="current">Dashboard</a></article>-->
		</div>
	</section><!-- end of secondary bar -->
	
	<aside id="sidebar" class="column">
		<form class="quick_search">
			<input type="text" value="Quick Search" onFocus="if(!this._haschanged){this.value=''};this._haschanged=true;">
		</form>
		<hr/>
		<h3>View Submitted Lyrics</h3>
		<ul class="toggle">
			<li><a href="#"></a></li>
		</ul>
		<h3>Comments</h3>
		<ul class="toggle">
			<li><a href="#"></a></li>
		</ul>
		<h3>Banned Reasons</h3>
		<ul class="toggle">
			<li><a href="#">Thêm Lý Do Cấm</a></li>
			<li><a href="#">Xem Lý Do Cấm</a></li>
			<li><a href="#">Danh Sách Bị Cấm</a></li>
		</ul>
		<h3>Categories</h3>
		<ul class="toggle">
			<li><a href="#"></a></li>
		</ul>
		<h3>Slideshows</h3>
		<ul class="toggle">
			<li><a href="#"></a></li>
		</ul>
		<footer>
			
		</footer>
	</aside><!-- end of sidebar -->
	
	<section id="main" class="column">
        <div>
            @RenderBody()
        </div>
	</section>

    <footer>
		<hr />
        <p><strong>Copyright &copy; 2014 Quản Trị Website</strong></p>
		<p>Project 2.2 <a href="http://infoworldschool.com/">Infoworldschool</a></p>
    </footer>
</div>
</body>
</html>
